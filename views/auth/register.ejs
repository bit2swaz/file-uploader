<%- include('../partials/header', { title: 'Register - File Uploader' }) %>

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-hover-effect">
            <div class="card-header">
                <h3 class="mb-0">Register</h3>
            </div>
            <div class="card-body">
                <% if (error) { %>
                    <div class="alert alert-danger">
                        <%= error %>
                    </div>
                <% } %>

                <form action="/auth/register" method="POST" class="fade-in">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= locals.name || '' %>" required>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="<%= locals.email || '' %>" required>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <p>Already have an account? <a href="/auth/login">Login</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 